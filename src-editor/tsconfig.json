// Specialized tsconfig for the admin directory,
// includes DOM typings and configures the admin build
{
    "compilerOptions": {
        "baseUrl": "./",
        "allowSyntheticDefaultImports": true,
        "checkJs": false,
        "noEmit": false,
        "outDir": "./build",
        "sourceMap": true,
        "sourceRoot": "./src",
        "noImplicitAny": true,
        "skipLibCheck": true,
        "lib": ["es2018", "DOM"],
        "jsx": "react",
        "types": ["@iobroker/types"],
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "include": ["./src/**/*", "./src/types.d.ts"],
    "exclude": ["./src/Components/BlocklyEditorTS.tsx"]
}
